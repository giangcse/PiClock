<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="PiClock.MainWindow"
        Title="Smart Frame Clock"
        WindowState="FullScreen"
        SystemDecorations="None"
        Cursor="None"
        Background="Black">

    <Window.Styles>
        <Style Selector="TextBlock.inter">
            <Setter Property="FontFamily" Value="avares://PiClock/Assets/Fonts#Inter"/>
        </Style>
        <Style Selector="TextBlock.mono">
            <Setter Property="FontFamily" Value="avares://PiClock/Assets/Fonts#JetBrains Mono"/>
        </Style>

        <Style Selector="Image.KenBurns">
            <Style.Animations>
                <Animation Duration="0:0:20" IterationCount="Infinite" PlaybackDirection="Alternate">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.0"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Window.Styles>

    <Grid>
        <Panel ClipToBounds="True">
            <Image Name="BackgroundImage" 
                   Classes="KenBurns"
                   Stretch="UniformToFill" 
                   Opacity="1.0"
                   RenderTransformOrigin="50%,50%">
            </Image>
        </Panel>

        <Border VerticalAlignment="Bottom" Height="350">
            <Border.Background>
                <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
                    <GradientStop Offset="0.0" Color="#00000000"/> <GradientStop Offset="0.4" Color="#99000000"/> <GradientStop Offset="1.0" Color="#F2000000"/> </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Grid VerticalAlignment="Bottom" Margin="60,0,60,50" ColumnDefinitions="*, Auto">
            
            <StackPanel Grid.Column="0" VerticalAlignment="Bottom">
                
                <StackPanel Orientation="Horizontal" Spacing="20" Margin="5,0,0,-10">
                    <TextBlock Classes="inter" Name="TxtDayName" Text="LOADING" 
                               FontSize="36" FontWeight="ExtraBold" 
                               Foreground="#F97316" LetterSpacing="1"/>
                    
                    <Border Width="2" Height="30" Background="#66FFFFFF" VerticalAlignment="Center"/>

                    <TextBlock Classes="inter" Name="TxtFullDate" Text="..." 
                               FontSize="36" FontWeight="Regular" 
                               Foreground="#CCFFFFFF"/>
                </StackPanel>

                <TextBlock Classes="inter" Name="TxtTime" Text="00:00"
                    FontSize="240" FontWeight="Black"
                    Foreground="White" LetterSpacing="-10"
                    Margin="-15,0,0,0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.8" OffsetX="5"
                            OffsetY="5" />
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,30">
                <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Right">
                    <TextBlock Name="TxtWeatherIcon" Text="☁" FontSize="90" Foreground="White" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <TextBlock Classes="inter" Name="TxtTemp" Text="--°" 
                               FontSize="110" FontWeight="Bold" 
                               Foreground="White" LetterSpacing="-5" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Classes="inter" Name="TxtWeatherDesc" Text="WAITING..." 
                           FontSize="24" FontWeight="Medium" 
                           Foreground="#CCFFFFFF" HorizontalAlignment="Right" 
                           TextAlignment="Right" Margin="0,5,10,0"
                           LetterSpacing="1"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>